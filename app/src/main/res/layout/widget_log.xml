<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_widget_dark">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/shadow_min"
        android:paddingLeft="@dimen/margin_max">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space9"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text"
            android:textStyle="normal"
            android:typeface="sans" />
    </ScrollView>

    <View
        android:layout_width="@dimen/margin_max"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/scroll_view"
        android:layout_marginBottom="@dimen/shadow_min"
        android:background="@color/colorPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_min"
        android:layout_alignBottom="@id/scroll_view"
        android:background="@drawable/shadow_bottom" />
</RelativeLayout>